@model IEnumerable<Product>@{    ViewBag.Title = "Liste des articles";}<div class="card-group">    @foreach (var product in Model)
    {
        var photoPath = "~/images/" + (product.Image ?? "noimage.jpg");    <div class="card m-3" style="min-width: 18rem; max-width:30.5%;">        <div class="card-header">            <h5><b>Désignation : </b> @product.Désignation</h5>            <h5><b>Prix : </b>@product.Prix</h5>            <h5><b>Quantité : </b> @product.Quantite</h5>        </div>        <img class="card-img-top imageThumbnail" src="@photoPath" asp-append-version="true" />        <div class="card-footer text-center">            <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id"               class="btn btn-primary m-1">View</a>            <a asp-action="Edit" asp-controller="Product" class="btn btn-primary m-1" asp-route-id="@product.Id">Edit</a>            <a asp-action="Delete" asp-controller="Product" class="btn btn-danger m-1" asp-route-id="@product.Id">Delete</a>                <form asp-action="AddToCart" asp-controller="Product" method="post" class="d-inline">                    <input type="hidden" name="id" value="@product.Id" />                    <input type="hidden" name="designation" value="@product.Désignation" />                    <input type="hidden" name="prix" value="@product.Prix" />                    <input type="hidden" name="photo" value="@product.Image" />                    <input type="hidden" name="quantite" value="@product.Quantite" />                    <button type="submit" class="btn btn-success m-1">Add to Cart</button>                </form>        </div>    </div>    }   </div>